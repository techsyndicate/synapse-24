            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1.8vh;
            width: 100%;
        }
        .inputs > input {
            background: #212123;
            border: none;
            outline: none;
            width: 100%;
            height: 6.5vh;
            padding: 1vw 1.5vw;
            border-radius: 10px;
            font-size: 1vw;
        }
        .top > button {
            font-size: 1vw;
            background: #466EFF;
            padding: 0.6vw 2vw;

            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            outline: none;
            border: none;
        }
        .bottom {
