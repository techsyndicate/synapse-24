        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Outfit';
            cursor: none;
            color: #fff;
        }
        .bg-img {
            width: 100vw;
            aspect-ratio: 100vh;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -100;
        }
        body {
            background: #18181B;
            overflow: hidden;
        }
        nav {
            width: 100vw;
            height: 15vh;
            padding: 0 6vw;

            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }
